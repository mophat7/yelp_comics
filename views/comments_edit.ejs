<%- include('partials/header') %>
<div class="container">
  <div class="row">
    <div class="col-6 m-auto">
      <h1>
        Hey
        <b class="text-capitalize text-primary"><%= comment.user.username %></b>
        Edit Your Comment
      </h1>
      <form
        action="/comics/<%= comic._id %>/comments/<%= comment._id %>?_method=PUT"
        method="POST"
      >
        <div class="form-group">
          <textarea name="text" id="text" cols="70" rows="8" required>
            <%=comment.text%></textarea
          >
        </div>

        <input type="submit" value="Update" class="btn btn-secondary btn-lg" />
      </form>
    </div>
  </div>
</div>
<%- include('partials/footer') %>
